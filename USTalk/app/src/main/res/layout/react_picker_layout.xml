<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_background"
    android:layout_gravity="center"
    android:elevation="6dp">
    <ImageView
        android:id="@+id/btnLike"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/react_like"
        android:background="@drawable/custom_rounded_lightgray_background"
        android:backgroundTint="@color/white"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnLove"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/react_heart"
        android:background="@drawable/custom_rounded_lightgray_background"
        android:backgroundTint="@color/white"
        android:padding="0dp"
        app:layout_constraintStart_toEndOf="@id/btnLike"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnHaha"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/react_haha"
        android:background="@drawable/custom_rounded_lightgray_background"
        android:backgroundTint="@color/white"
        android:padding="0dp"
        app:layout_constraintStart_toEndOf="@id/btnLove"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnWow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/react_wow"
        android:background="@drawable/custom_rounded_lightgray_background"
        android:backgroundTint="@color/white"
        android:padding="0dp"
        app:layout_constraintStart_toEndOf="@id/btnHaha"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnSad"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/react_sad"
        android:background="@drawable/custom_rounded_lightgray_background"
        android:backgroundTint="@color/white"
        android:padding="0dp"
        app:layout_constraintStart_toEndOf="@id/btnWow"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnAngry"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/react_angry"
        android:background="@drawable/custom_rounded_lightgray_background"
        android:backgroundTint="@color/white"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSad"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>